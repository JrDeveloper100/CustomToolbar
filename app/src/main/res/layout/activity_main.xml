<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="top app bar - small centered -flat"
        android:textAllCaps="false"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customToolbar2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_design"
        android:text="top app bar - small flat"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customToolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customToolbar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_design"
        android:text="Top App Bar - Medium Flat"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customToolbar2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customToolbar4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_design"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="top app bar - large flat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customToolbar3"/>

</androidx.constraintlayout.widget.ConstraintLayout>